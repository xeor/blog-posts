#!/bin/sh

event="${1}"
file="${2}"

case "$event" in
  r)
    echo "File (${file}) is read, deleting it"
    rm -f "${file}"
    exit 0
    ;;
  x)
    # Means that the file can't be watched anymore.. Of corse it can't, we just deleted it :p
    ;;
  *)
    echo "Got an unsupported event on file (${file}), got ${event}"
    exit 1
    ;;
esac